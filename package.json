{
  "name": "@lasercat/fullstack-lib-template",
  "version": "1.0.2",
  "description": "A template for react-typescript components",
  "author": "Ryland Goldstein",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lasercat-industries/fullstack-lib-template.git"
  },
  "bugs": {
    "url": "https://github.com/lasercat-industries/fullstack-lib-template/issues"
  },
  "homepage": "https://github.com/lasercat-industries/fullstack-lib-template#readme",
  "scripts": {
    "prebuild": "bun run clean",
    "build": "bun ./scripts/build.ts && bunx tsc --build --force tsconfig.build.json",
    "dev": "concurrently --kill-others-on-fail \"bun run dev:server\" \"bun run dev:client\" --names=api,ui -c cyan,magenta",
    "dev:client": "vite",
    "dev:server": "bun --watch run src/api/server.ts",
    "postbuild": "bun run build:validate",
    "build:analyze": "bun run build && bunx source-map-explorer dist/*.js",
    "build:check": "bun run build && bunx publint && bunx attw --pack",
    "build:size": "bun run build && bunx size-limit",
    "build:validate": "bun -e 'import(\"./dist/index.js\").then(() => console.log(\"âœ… ESM import works\"))'",
    "clean": "bun run scripts/clean.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path ./node_modules/@lasercat/config/.prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path ./node_modules/@lasercat/config/.prettierignore",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@lasercat/config": "^1.2.3",
    "@tailwindcss/vite": "^4.1.12",
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv": "^17.2.0",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.9.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "class-variance-authority": "^0.7.1",
    "tailwind-merge": "^3.3.1",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "prettier": "@lasercat/config/.prettierrc.json",
  "peerDependencies": {
    "@types/bun": "latest",
    "@types/node": "24.x",
    "@types/react-dom": "^19.x",
    "react": "^19.x",
    "react-dom": "^19.x",
    "react-router": "^7.x",
    "typescript": "^5.8.3",
    "hono": "4.x"
  }
}
